{
  "include": ["src/**/*"],
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "ES2020",
    "rootDir": "./src/",
    "baseUrl": "./src/",
    "allowJs": false,
    "declaration": true,
    "outDir": "./dist/",
    "declarationDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  }
}
